<h1>burgers!</h1>
<div>
  <h2>Are you Ready to eat these?</h2>
   {{#each burgers}}
   {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
    {{/each}}
</div>

<div>
  <h2>Already Eaten</h2>
    {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</div>



<form class="create-form">

  <div class="form-group">
    <label for="bn">burger name</label>
    <input style="height:200px", "width:200px" type="text" id="burger" name="name">
  </div>

  <button type="submit" id="addBurger"> Add burger</button>
</form>
